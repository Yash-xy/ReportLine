<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ReportLine</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
    <style>
        .form-container {
            padding: 20px;
            max-width: 600px;
            margin: 0 auto;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .table-container {
            margin-top: 30px;
        }
        .foot-panel4 {
            color: white;
            text-align: center;
            font-size: 0.85rem;
            padding: 25px;
        }
        .copyright {
            padding-top: 5px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="photos/logo1.jpg" alt="Logo" width="30" height="30" class="d-inline-block align-top"> ReportLine
            </a>
            <div class="d-flex">
                <a class="nav-link" href="/home">Home</a>
                <a class="nav-link" href="/report">Report</a>
                <a class="nav-link" href="/track-report">Track</a>
                <a class="nav-link" href="/nhelp">Help</a>
                <a class="nav-link" href="/">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main id="content" class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Track Your Incident Reports</h2>

            <!-- Search Form -->
            <div class="form-container mb-5">
                <form id="search-form" action="/track-report" method="GET">
                    <div class="mb-3">
                        <label for="report-id" class="form-label">Search by Report ID</label>
                        <input type="text" class="form-control" id="report-id" name="report_id" placeholder="Enter Report ID">
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>

            <!-- Searched Report -->
<% if (searchedReport) { %>
    <div class="mb-4">
        <h4>Searched Report</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Report ID</th>
                    <th>Incident Type</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= searchedReport.report_id %></td>
                    <td><%= searchedReport.incident_type %></td>
                    <td><%= searchedReport.description %></td>
                    <td><%= searchedReport.status %></td>
                </tr>
            </tbody>
        </table>
    </div>
<% } else if (message) { %>
    <!-- Display message if no searchedReport found -->
    <div class="alert alert-warning" role="alert">
        <%= message %>
    </div>
    
<% } %>

<!-- All Reports -->
<div class="table-container">
    <h4>All Your Reports</h4>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Report ID</th>
                <th>Incident Type</th>
                <th>Description</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% if (reports && reports.length > 0) { %>
                <% reports.forEach(report => { %>
                <tr>
                    <td><%= report.report_id %></td>
                    <td><%= report.incident_type %></td>
                    <td><%= report.description %></td>
                    <td><%= report.status %></td>
                </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">No reports found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
</div>

    <!-- Footer -->
    <footer>
        <div class="foot-panel4">
            <div class="copyright">
                Â© 2024, ReportLine, Incident Report System, Inc. or its affiliates
            </div>
        </div>
    </footer>
     
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
