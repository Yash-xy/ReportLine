  <link href="css/styles.css" rel="stylesheet">
  <style>
    .modal-content {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 15px;
        backdrop-filter: blur(10px);
        animation: fadeIn 0.6s ease-in-out;
    }
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
    :root{
    --bs-gradient: linear-gradient(180deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0))
    }
    .bg-gradient {
      background: linear-gradient(90deg, rgba(0, 123, 255, 0.9), rgba(102, 16, 242, 0.7));
      border-bottom: 4px solid rgba(102, 16, 242, 0.9); 
    }
    .btn-gradient {
        background: linear-gradient(90deg, rgba(102, 16, 242, 0.9), rgba(0, 123, 255, 0.7));
        color: #fff;
        border: none;
        transition: all 0.3s ease-in-out;
    }
    .btn-gradient:hover {
        background: linear-gradient(90deg, rgba(0, 123, 255, 0.9), rgba(102, 16, 242, 0.9)); 
        transform: scale(1.05);
    }
    .modal-header {
        color: #333;
    }
    .bg-light{
      --bs-bg-opacity: 0;
    }
    .input-focus {
        border: 2px solid transparent;
        transition: border-color 0.3s ease;
        background: rgba(255, 255, 255, 0.7);
    }
    .input-focus:focus {
      border-color: rgba(102, 16, 242, 0.8);
      box-shadow: 0 0 5px rgba(102, 16, 242, 0.4);
    }
    .input-icon {
        position: absolute;
        right: 15px;
        top: 77%;
        transform: translateY(-50%);
        color: #6c757d;
    }
    .input-focus:focus + .input-icon {
        color: #6610f2;
    }
    .modal-footer {
        background: #f8f9fa;
        border-top: 1px solid #dee2e6;
    }
</style>
</head>
